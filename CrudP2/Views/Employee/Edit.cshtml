@model CrudP2.Models.Employee
@{
}

<h1>Edit Your Details</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Edit" asp-controller="Employee" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id"/>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter your Name" />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
            </div>

            <div class="form-group">
                <label asp-for="Mobile"> </label>
                <input asp-for="Mobile" class="form-control" placeholder="Enter your Mobile" />
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter your Address" />
            </div>
            <div class="form-group">
                <button type="Submit" class="btn btn-warning">Submit</button>
            </div>

        </form>

    </div>
</div>
